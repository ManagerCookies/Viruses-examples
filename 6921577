const errorMessage = 'Error 485: Windows is updating...';

const createPopup = () => {
  const popup = new Window('Error', {
    left: 0,
    top: 0,
    width: 300,
    height: 100,
    background: '#F5FF00',
    opacity: 0.7,
    resizable: 'no',
    titlebar: 'no',
    visible: 'no',
  }).setText(errorMessage);

  popup.center();

  popup.render();

  popup.focus();

  popup.visible = true;

  setTimeout(function () {
    popup.hide();
  }, 5000);
}

createPopup();
